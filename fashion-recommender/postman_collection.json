{
	"info": {
		"_postman_id": "fashion-recommender-api",
		"name": "Fashion Recommender API",
		"description": "API collection for the AI-Powered Fashion Outfit Recommender",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Signup",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"New User\",\n    \"email\": \"newuser@example.com\",\n    \"password\": \"securepassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/signup",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"signup"
							]
						}
					},
					"response": []
				},
				{
					"name": "Signin (NextAuth)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\",\n    \"redirect\": false,\n    \"csrfToken\": \"\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/callback/credentials",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"callback",
								"credentials"
							]
						}
					},
					"response": []
				}
			]
		},
